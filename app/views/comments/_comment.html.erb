<div class="comment">
  <a class="avatar">
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTjvL7ytJFHYF6diUgxkRl2HittcNmaXQcyxJRDutvA3BZuprIR3ZBKcgno">
  </a>
  <div class="content">
    <a class="author"><%= User.find(comment.user_id).name if comment.user_id%></a>
    <div class="metadata">
      <span class="date"><%=time_ago_in_words(comment.created_at) if comment.created_at%></span>
    </div>
    <div class="text">
      <%= comment.content %>
    </div>
    <% if current_user.id == comment.user_id %>
    <div class="actions">
      <%= link_to "Delete", review_comment_path(comment.review,comment.id), method: :delete, data: {confirmation: "Are you sure?"}%>
    </div>
    <% end %>
  </div>
</div>
